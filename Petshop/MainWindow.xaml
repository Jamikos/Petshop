<Window x:Class="Petshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Petshop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Name="Username_Box" Margin="0,158,0,0" FontSize="26" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="280" Height="38" GotFocus="Username_Box_GotFocus" LostFocus="Username_Box_LostFocus" />
        <TextBox HorizontalAlignment="Center" Margin="0,233,0,0" Name="Password_Box" FontSize="26" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="280" Height="38" GotFocus="Password_Box_GotFocus" LostFocus="Password_Box_LostFocus"/>
        <Button Content="Forgot Password?" Name="Forgot_Password_Button" HorizontalAlignment="Left" Margin="443,271,0,0" VerticalAlignment="Top" BorderBrush="White" Background="{x:Null}" Click="Forgot_Password_Button_Click"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,312,0,0" VerticalAlignment="Top" Height="36" Width="158" Background="#FF2414E4" Foreground="White" Click="Button_Click"/>


    </Grid>
</Window>
